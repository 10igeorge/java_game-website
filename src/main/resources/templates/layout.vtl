<!DOCTYPE html>
<html>
<meta charset="utf-8">

  <head>
    <title>Game Site</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel='stylesheet' href='/app.css'>
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          #if($user)
          <a class="navbar-brand" href="/games">Game Site</a>
          #else
          <a class="navbar-brand" href="#">Game Site</a>
          #end
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            #if($user)
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Games <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/simonSays">Simon Says</a></li>
                <li><a href="/memory">Memory</a></li>
                <li><a href="/tamagotchi">Tamagotchi</a></li>
              </ul>
            </li>
            #end
          </ul>
          #if($user)
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" id="profileDropDown">$user.getName() <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/profile" id="profileLink">Profile</a></li>
                <li><a href="/" id="signOutLink">Sign Out</a></li>
              </ul>
            </li>
          </ul>
          #else
          <a href="/" type="button" class="btn btn-default navbar-btn navbar-right">Log in</a>
          <a href="/signUp" type="button" class="btn btn-success navbar-btn navbar-right">Sign Up</a>
          #end
        </div>
      </div>
    </nav>
    <div class="container">
    #parse( $template )
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  </body>
</html>
