<h1>Repeat the Color Sequence!</h1>
<form action="/play" method="post">
  <button value="red" type="submit" name="color" id="red" class="btn btn-danger">Red</button>
  <button value="blue" type="submit" name="color" id="blue" class="btn btn-info">Blue</button>
  <button value="green" type="submit" name="color" id="green" class="btn btn-success">Green</button>
  <button value="yellow" type="submit" name="color" id="yellow" class="btn btn-warning">Yellow</button>
</form>
